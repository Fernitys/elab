import math

def circle_area(r):
    a = math.pi*r**2
    return a
    
def circle_circumference(r):
    f = 2*math.pi*r
    return f

cr = float(input('Enter circle radius: '))
cf = 2*math.pi*cr
area = math.pi*cr**2
print(f'Circumference of circle is {cf:.2f}')
print(f'Area of circle is {area:.2f}')
