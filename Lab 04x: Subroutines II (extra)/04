def value():
    a = float(input('Enter length of side 1: '))
    b = float(input('Enter length of side 2: '))
    c = float(input('Enter length of side 3: '))
    return a,b,c

def compute(a,b,c):
    s = (a+b+c)/2
    A = (s*(s-a)*(s-b)*(s-c))**0.5
    return A

def ans():
    a,b,c = value()
    print(f'Area of the triangle is {compute(a,b,c):.2f}')
    
ans()
